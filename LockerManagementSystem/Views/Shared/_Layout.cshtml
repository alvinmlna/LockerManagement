<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .no-padding {
            padding-left: 0px;
            padding-right: 0px;
        }

        .padding-0 {
            padding: 0;
            margin: 0;
        }

        div#loading {
            display: none;
        }

        .centered {
            position: fixed;
            top: 50%;
            left: 50%;
            margin-top: -50px;
            margin-left: -100px;
        }

        .loading-background {
            width: 100%;
            display: block;
            background-color: black;
            height: 100%;
            position: fixed;
            opacity: .2;
            top: 0;
            left: 0;
            z-index: 20;
        }

        .cert-expired, .cert-normal, .cert-warning {
            color: white;
        }

        .cert-expired {
            background-color: rgb(255, 136, 136);
        }

        .cert-warning {
            background-color: rgb(255, 255, 136);
            color: black;
        }

        .cert-normal {
            background-color: rgb(136, 255, 136);
            color: black;
        }
    </style>
    <style>
        @@media (min-width: 1200px) {
            .container {
                min-width: 1400px;
            }
        }

        .navbar-inverse {
            background-color: #478f7c !important;
        }

            .navbar-inverse .navbar-nav > li > a, .navbar-inverse .navbar-brand {
                color: #eee;
            }

        .btn-success {
            background-color: #478f7c !important;
        }

        .navbar-inverse .navbar-nav > .open > a, .navbar-inverse .navbar-nav > .open > a:focus, .navbar-inverse .navbar-nav > .open > a:hover {
            color: #fff;
            background-color: rgba(58, 120, 97, 1);
        }

        div#loading {
            display: none;
        }

        .centered {
            position: fixed;
            top: 50%;
            left: 50%;
            margin-top: -50px;
            margin-left: -100px;
        }

        .loading-background {
            width: 100%;
            display: block;
            background-color: black;
            height: 100%;
            position: fixed;
            opacity: .2;
            top: 0;
            left: 0;
            z-index: 20;
        }
    </style>

</head>
<body>
    <div class="flex-container">
        <div id="header" class="header">
            <div class="logo">
                <h1>Locker Management System</h1>
            </div>
        </div>
        <div id="main-navbar">

            @Html.Action("Navbar", "Layout")


        </div>
        <div class="container body-content">
            @RenderBody()
            <div id="loading">
                <div class="loading-background"></div>
                <img class="centered" src="~/Content/img/Loading.gif" />
            </div>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        <script>
            function successAlert() {
                Swal.fire({
                    icon: 'success',
                    title: 'Saved',
                    showConfirmButton: false,
                    timer: 1500
                })
            }

            function failAlert() {
                Swal.fire({
                    icon: 'error',
                    title: 'Failed',
                    showConfirmButton: false,
                    timer: 1500
                })
            }

        </script>

        @RenderSection("scripts", required: false)



    </div>
</body>
</html>
