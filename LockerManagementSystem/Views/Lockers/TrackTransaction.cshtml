@model IEnumerable<LockerManagementSystem.ViewModels.RequestViewModel>
@using LockerManagementSystem.App_Class.Helpers


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.title = "Tracking";
    ViewBag.header = "Track Locker Transaction for " + ViewBag.LockerNumber;
}


<div class="card ">
        <div class="card-header bg-ifx-berry">
              All transaction (order by newest)
        </div>
        <div class="card-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BadgeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th>
                        Date Request
                    </th>
                    <th>
                        Date Release
                    </th>
                    <th>
                        Date Return
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.BadgeId)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Department)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.DateRequest)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.DateRelease)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.DateReturn)
                        </td>
                    </tr>
                }

            </table>

        </div>        
        <div class="card-footer">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>



